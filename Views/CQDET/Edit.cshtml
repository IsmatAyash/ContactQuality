@model ContactQuality.Models.CQDET

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Contact For</h2>

@using (Html.BeginForm("Edit", "CQDET", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Html.Raw(Session["AgtName"].ToString())</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CQDETID)
        @Html.HiddenFor(model => model.CQHDRID)
        @Html.HiddenFor(model => model.GCGrade)
        @Html.HiddenFor(model => model.CEGrade)
        @Html.HiddenFor(model => model.CCGrade)
        @Html.HiddenFor(model => model.CHGrade)
        @Html.HiddenFor(model => model.PKGrade)
        @Html.HiddenFor(model => model.SFGrade)
        @Html.HiddenFor(model => model.SSGrade)
        @Html.HiddenFor(model => model.CHGrade)

        <div class="form-group">
            @Html.LabelFor(model => model.CQCID, htmlAttributes: new {  @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CQCID", null, htmlAttributes: new { @class = "form-control", @Disabled = "Disabled" })
                @Html.ValidationMessageFor(model => model.CQCID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CQEvalDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CQEvalDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.CQEvalDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CQEvaluator, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CQEvaluator, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CQEvaluator, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CQTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CQTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CQTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CQRecording, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DisplayFor(model => model.CQRecording, new { htmlAttributes = new { @class = "form-control col-md-2" } })
                <div class="col-md-6">
                    <input type="file" name="uploadFile" />
                    @Html.ValidationMessage("CustomError")
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                <a href="@Url.Action("Index", "CQHDR", new { hdrId = Model.CQHDRID, detId = Model.CQDETID, agentLogin = Model.CQHDR.AgentLogin})"><span class="glyphicon glyphicon-arrow-left"> Back</span></a>
            </div>
        </div>
    </div>
}
