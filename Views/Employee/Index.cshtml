@model IEnumerable<ContactQuality.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Employees</h2>

@using (Html.BeginForm("Index", "Employee", FormMethod.Get))
{
    <ul class="nav nav-pills">
        <li>
            <a href='@Url.Action("Create", "Employee")'>
                <span class="glyphicon glyphicon-plus"></span>
            </a>
        </li>
    </ul>
}
<table class="table-condensed" border="1">
    <tr style="background-color:lightblue">
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CRMUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WindowsUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title.TitleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CRMUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WindowsUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Team.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title.TitleName)
        </td>
        <td>
            <a href='@Url.Action("Edit", "Employee", new { id = item.AgentLogin })'>
                <i class="glyphicon glyphicon-pencil">&nbsp;</i>
            </a>
            <a href='@Url.Action("Details", "Employee", new { id = item.AgentLogin })'>
                <i class="glyphicon glyphicon-list-alt">&nbsp;</i>
            </a>
            <a href='@Url.Action("Delete", "Employee", new { id = item.AgentLogin })'>
                <i class="glyphicon glyphicon-remove"></i>
            </a>
        </td>
    </tr>
}

</table>
