@model IEnumerable<ContactQuality.Models.CQTNeed>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<form class="navbar-form navbar-left" role="search">
    <a href="@Url.Action("Create", "CQTNeeds")"><span class="glyphicon glyphicon-plus"></span></a>
    &ensp;
    <div class="form-group">
        Find by Name:
        <input type="text" class="form-control" placeholder="Search" name="SearchString">
        <button type="submit" class="btn btn-default" href='@Url.Action("Index", "CQTNeeds")'><span class="glyphicon glyphicon-search"></span></button>
    </div>
    <table class="table-bordered table-condensed table-hover">
        <tr style="background-color:grey">
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm })
            </th>
            <th>
                First Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competency.CompName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TNLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TNStatus)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Competency.CompName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TNLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TNStatus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TNID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TNID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TNID })
                </td>
            </tr>
        }
    </table>
</form>
</body>
</html>
