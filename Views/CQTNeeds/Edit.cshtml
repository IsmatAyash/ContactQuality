@model ContactQuality.Models.CQTNeed

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h2>Training Needs</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TNID)
    
            <div class="form-group">
                @Html.LabelFor(model => model.CompID, "CompID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CompID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CompID, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.AgentLogin, "AgentLogin", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("AgentLogin", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AgentLogin, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.TNLevel, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 radio">
                    <label>
                        @Html.RadioButtonFor(model => model.TNLevel, "Beginner    ", new { @type = "radio" }) Beginner <br />
                        @Html.RadioButtonFor(model => model.TNLevel, "Intermediary", new { @type = "radio" }) Intermediary <br />
                        @Html.RadioButtonFor(model => model.TNLevel, "Advanced    ", new { @type = "radio" }) Advanced
                    </label>
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.TNStatus, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 radio">
                    <label>
                        @Html.RadioButtonFor(model => model.TNStatus, "Scheduled", new { @type = "radio" }) Scheduled <br />
                        @Html.RadioButtonFor(model => model.TNStatus, "Completed", new { @type = "radio" }) Completed <br />
                        @Html.RadioButtonFor(model => model.TNStatus, "Canceled ", new { @type = "radio" }) Canceled
                    </label>
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
