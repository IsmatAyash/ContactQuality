@model IEnumerable<ContactQuality.Models.CQPeriod>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutParameters.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "CQPeriod", FormMethod.Get))
{
    <ul class="nav nav-pills">
        <li>
            <a href='@Url.Action("Create", "CQPeriod")'>
                <span class="glyphicon glyphicon-plus"></span>
            </a>
        </li>
    </ul>
}

<table class="table-condensed" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CQPeriodName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CQPeriodName)
        </td>
        <td>
            <a href='@Url.Action("Edit", "CQPeriod", new { id = item.CQPID })'>
                <i class="glyphicon glyphicon-pencil">&nbsp;</i>
            </a>
            <a href='@Url.Action("Details", "CQPeriod", new { id = item.CQPID })'>
                <i class="glyphicon glyphicon-list-alt">&nbsp;</i>
            </a>
            <a href='@Url.Action("Delete", "CQPeriod", new { id = item.CQPID })'>
                <i class="glyphicon glyphicon-remove"></i>
            </a>
        </td>        
    </tr>
}

</table>
